<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ydotco.whatchathinking.AskQuestion"
    android:background="@drawable/background">

    <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:srcCompat="@drawable/white_square_for_background_of_text_lines"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginLeft="12dp"-->
        <!--android:layout_marginStart="12dp" />-->

    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="343dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Question?"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginBottom="145dp"
        android:layout_above="@+id/btSubmit"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="Option 1"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/btOpt1Cam"
        android:layout_alignLeft="@+id/etQuestion"
        android:layout_alignStart="@+id/etQuestion" />

    <EditText
        android:id="@+id/etOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:hint="Option 2"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/btOpt2Cam"
        android:layout_alignRight="@+id/etQuestion"
        android:layout_alignEnd="@+id/etQuestion" />

    <Button
        android:id="@+id/btOpt1Cam"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:background="@drawable/camera"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignTop="@+id/btOpt2Cam"
        android:layout_alignLeft="@+id/btSubmit"
        android:layout_alignStart="@+id/btSubmit" />

    <Button
        android:id="@+id/btOpt2Cam"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:background="@drawable/camera"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_above="@+id/btSubmit"
        android:layout_alignRight="@+id/btSubmit"
        android:layout_alignEnd="@+id/btSubmit"
        android:layout_marginBottom="35dp" />

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/ask_the_world"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp" />

</RelativeLayout>
