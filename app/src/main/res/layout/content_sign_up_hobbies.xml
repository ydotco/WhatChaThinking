<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:gravity="center"
        android:layout_margin="15dp"
        android:text="hi, nice to meet you! please select your interests?"
        android:textSize="24sp" />

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ydotco.whatchathinking.SignUpHobbies"
    tools:showIn="@layout/activity_sign_up_hobbies">


    <ImageButton
        android:id="@+id/entertainment"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/entertainment" />

    <ImageButton
        android:id="@+id/fashion"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/fashion" />
    <ImageButton
    android:id="@+id/finance"
        android:layout_width="180dp"
        android:layout_height="130dp"
    app:srcCompat="@drawable/finances" />

    <ImageButton
        android:id="@+id/literature"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/literature" />
    <ImageButton
    android:id="@+id/music"
        android:layout_width="180dp"
        android:layout_height="130dp"
    app:srcCompat="@drawable/music" />

    <ImageButton
        android:id="@+id/photography"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/photography" />
    <ImageButton
    android:id="@+id/programming"
        android:layout_width="180dp"
        android:layout_height="130dp"
    app:srcCompat="@drawable/programming" />

    <ImageButton
        android:id="@+id/relationship"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/relationships" />
    <ImageButton
    android:id="@+id/technology"
        android:layout_width="180dp"
        android:layout_height="130dp"
    app:srcCompat="@drawable/technology" />

    <ImageButton
        android:id="@+id/travel"
        android:layout_width="180dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/travel" />
</GridLayout>
    </ScrollView>
</LinearLayout>